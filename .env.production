# Production Environment for CampusCrew

# Firebase Configuration (will be set in Vercel dashboard)
VITE_FIREBASE_API_KEY=
VITE_FIREBASE_AUTH_DOMAIN=
VITE_FIREBASE_PROJECT_ID=
VITE_FIREBASE_STORAGE_BUCKET=
VITE_FIREBASE_MESSAGING_SENDER_ID=
VITE_FIREBASE_APP_ID=
VITE_FIREBASE_MEASUREMENT_ID=

# Production Mode Settings
REACT_APP_API_URL=https://your-api-domain.com/api
REACT_APP_API_VERSION=v1

# Production Mode Settings
REACT_APP_DEBUG_MODE=false

# Authentication Settings
REACT_APP_TOKEN_EXPIRY=86400000
REACT_APP_SESSION_TIMEOUT=3600000

# College Email Domains
REACT_APP_VALID_DOMAINS=cmrec.ac.in,cmrit.ac.in,cmrtc.ac.in,cmrcet.ac.in,cmr.edu.in

# Feature Flags - Production
REACT_APP_ENABLE_EMAIL_VERIFICATION=true
REACT_APP_ENABLE_SMS_VERIFICATION=true
REACT_APP_ENABLE_SOCIAL_LOGIN=true

# Security Settings
REACT_APP_PASSWORD_MIN_LENGTH=6
REACT_APP_MAX_LOGIN_ATTEMPTS=5
REACT_APP_LOCKOUT_DURATION=900000
